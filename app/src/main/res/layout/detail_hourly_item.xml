<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detail_hourly_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="10 AM"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/detail_hourly_image"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/detail_hourly_image"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@id/detail_hourly_time"
            app:layout_constraintEnd_toStartOf="@+id/detail_hourly_temp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/detail_hourly_time"
            app:layout_constraintTop_toTopOf="@id/detail_hourly_time"
            app:srcCompat="@drawable/ic_clear"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/detail_hourly_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="58Â°"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/detail_hourly_precip"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/detail_hourly_image"
            app:layout_constraintTop_toTopOf="@id/detail_hourly_time" />

        <TextView
            android:id="@+id/detail_hourly_precip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/detail_hourly_wind"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/detail_hourly_temp"
            app:layout_constraintTop_toTopOf="@id/detail_hourly_time" />

        <TextView
            android:id="@+id/detail_hourly_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SSW 4 MPH"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/detail_hourly_precip"
            app:layout_constraintTop_toTopOf="@id/detail_hourly_time" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>