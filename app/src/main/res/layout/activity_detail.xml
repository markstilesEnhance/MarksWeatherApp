<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="UI.detail.DetailActivity"
    android:background="@color/colorPrimaryLight">

    <LinearLayout
        android:id="@+id/detail_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorAccentLight">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detail_time"
                style="@style/BasicText"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/time"
                app:layout_constraintEnd_toStartOf="@+id/detail_weather"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/detail_weather"
                style="@style/BasicText"
                android:text="@string/weather"
                app:layout_constraintEnd_toStartOf="@+id/detail_temp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/detail_time"
                app:layout_constraintTop_toTopOf="@id/detail_time" />

            <TextView
                android:id="@+id/detail_temp"
                style="@style/BasicText"
                android:text="@string/temp"
                app:layout_constraintEnd_toStartOf="@+id/detail_precip"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/detail_weather"
                app:layout_constraintTop_toTopOf="@id/detail_time" />

            <TextView
                android:id="@+id/detail_precip"
                style="@style/BasicText"
                android:text="@string/precip"
                app:layout_constraintEnd_toStartOf="@+id/detail_wind"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/detail_temp"
                app:layout_constraintTop_toTopOf="@id/detail_time" />

            <TextView
                android:id="@+id/detail_wind"
                style="@style/BasicText"
                android:text="@string/wind"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/detail_precip"
                app:layout_constraintTop_toTopOf="@id/detail_time" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/detail_recycler"
        android:layout_width="@dimen/dimen_zero"
        android:layout_height="@dimen/dimen_zero"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_header" />
</androidx.constraintlayout.widget.ConstraintLayout>
